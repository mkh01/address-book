{% extends 'base.html.twig' %}


{% block header %}
    <div class="col-lg-7 col-md-6 col-sm-12">
        <h2>Contact List</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Contacts</a></li>
            <li class="breadcrumb-item">list</li>
        </ul>
        <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
    </div>
    <div class="col-lg-5 col-md-6 col-sm-12">
        <button class="btn btn-success btn-icon float-right" type="button"><i class="zmdi zmdi-plus"></i></button>
    </div>
{% endblock header %}

{% block body %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>Create</strong> Contact</h2>
                </div>
                <div class="body">
                    <form class="form-horizontal">
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label for="email_address_2">Email Address</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8">
                                <div class="form-group">
                                    <input type="text" id="email_address_2" class="form-control" placeholder="Enter your email address">
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label for="password_2">Password</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8">
                                <div class="form-group">
                                    <input type="password" id="password_2" class="form-control" placeholder="Enter your password">
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-8 offset-sm-2">
                                <div class="checkbox">
                                    <input id="remember_me_2" type="checkbox">
                                    <label for="remember_me_2">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-8 offset-sm-2">
                                <button type="button" class="btn btn-raised btn-primary btn-round waves-effect">LOGIN</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>





    <div class="card">
        <div class="card-body">

            <h4 class="card-title">{{ 'contact.form.create.title'|trans }}</h4>

            {{ form_start(form, { 'attr' : { 'class': 'form-material' } }) }}

            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.firstName) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                        </div>
                        <div class="col-lg-3 col-md-6">
                        </div>
                        <div class="col-lg-3 col-md-6">
                        </div>
                        <div class="col-lg-3 col-md-6">
                        </div>
                    </div>
                </div>

                <div class="col-12">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}