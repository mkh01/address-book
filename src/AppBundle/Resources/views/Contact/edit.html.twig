{% extends 'base.html.twig' %}

{% block header %}
    <div class="col-lg-7 col-md-6 col-sm-12">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('contact_index') }}"><i class="zmdi zmdi-home"></i>
                    Contacts</a></li>
            <li class="breadcrumb-item">Edit</li>
        </ul>
    </div>
{% endblock header %}

{% block body %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>Edit</strong> Contact</h2>
                </div>
                <div class="body">
                    {{ form_start(form, { 'attr' : { 'class': 'form-material' } }) }}
                    <form class="form-horizontal">
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.firstName) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.firstName) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.lastName) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.lastName) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.phoneNumber) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.phoneNumber) }}
                                </div>
                            </div>
                        </div>

                        {% if form_errors(form.phoneNumber) %}
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4">
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-3">
                                    <div class="form-group">
                                        {{ form_errors(form.phoneNumber) }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.email) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.birthday) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    <div class="input-group masked-input">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="zmdi zmdi-calendar"></i></span>
                                            {{ form_widget(form.birthday) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.street) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.street) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.city) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.zip) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.zip) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 form-control-label">
                                <label>{{ form_label(form.country) }}</label>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-3">
                                <div class="form-group">
                                    {{ form_widget(form.country) }}
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </form>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
