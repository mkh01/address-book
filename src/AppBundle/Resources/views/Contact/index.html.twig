{% extends 'base.html.twig' %}

{% block header %}
    <div class="col-lg-7 col-md-6 col-sm-12">
        <h2>Contact List</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Contacts</a></li>
            <li class="breadcrumb-item">list</li>
        </ul>
        <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
    </div>
    <div class="col-lg-5 col-md-6 col-sm-12">
        <button class="btn btn-success btn-icon float-right" type="button"><i class="zmdi zmdi-plus"></i></button>
    </div>
{% endblock header %}

{% block body %}
    <div class="card project_list">
        <div class="table-responsive">
            <table class="table table-hover c_table theme-color">
                <thead>
                <tr>
                    <th style="width:50px;">Assigned</th>
                    <th></th>
                    <th>Name</th>
                    <th class="hidden-md-down">Team</th>
                    <th class="hidden-md-down" width="150px">Status</th>
                    <th>Priority</th>
                    <th>Due Date</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>
                        <a class="single-user-name" href="javascript:void(0);">Jonathan Deo</a><br>
                        <small>Project Lead</small>
                    </td>
                    <td>
                        <strong>eCommerce Website</strong><br>
                        <small>Cost: $215</small>
                    </td>
                    <td class="hidden-md-down">
                        <ul class="list-unstyled team-info margin-0">
                            {#                                            <li><img src="assets/images/xs/avatar2.jpg" alt="Avatar"></li>#}
                        </ul>
                    </td>
                    <td class="hidden-md-down">
                        <div class="progress">
                            <div class="progress-bar l-blue" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%;"></div>
                        </div>
                    </td>
                    <td><span class="badge badge-info">Medium</span></td>
                    <td>25 Dec 2019</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block leftsidebar %}
    <aside id="leftsidebar" class="sidebar">
        <div class="navbar-brand">
            <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
            <a href="#"><span class="m-l-10">Address book</span></a>
        </div>
        <div class="menu">
            <ul class="list">
                <li>
                    <a href="#" class="menu-toggle">
                        <i class="zmdi zmdi-apps"></i><span>Contacts</span>
                    </a>
                    <ul class="ml-menu">
                        <li><a href="{{ path('contact_index') }}">List</a></li>
                        <li><a href="{{ path('contact_create') }}">New</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </aside>
{% endblock leftsidebar %}