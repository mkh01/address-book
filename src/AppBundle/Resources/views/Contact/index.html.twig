{% extends 'base.html.twig' %}

{% block header %}
    <div class="col-lg-7 col-md-6 col-sm-12">
        <h2>Contact List</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Contacts</a></li>
            <li class="breadcrumb-item">list</li>
        </ul>
        <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i>
        </button>
    </div>
    <div class="col-lg-5 col-md-6 col-sm-12">
        <a href="{{ path('contact_create') }}" title="create" class="btn btn-success btn-icon float-right">
            <i class="zmdi zmdi-plus"></i>
        </a>
    </div>
{% endblock header %}

{% block body %}
    <div class="card project_list">
        <div class="table-responsive">
            <table class="table table-hover c_table theme-color">
                <thead>
                <tr>
                    <th>#</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Phone number</th>
                    <th>Email</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>
                            {{ contact.id }}
                        </td>
                        <td>
                            <a>{{ contact.firstName }}</a>
                        </td>
                        <td>
                            <a>{{ contact.lastName }}</a>
                        </td>
                        <td>
                            <a>{{ contact.phoneNumber|phone_number_format }}</a>
                        </td>
                        <td>
                            <a>{{ contact.email }}</a>
                        </td>
                        <td>
                            <a>{{ contact.country }}</a>
                        </td>
                        <td>
                            <a href="{{ path('contact_edit', {'id': contact.id} ) }}" title="edit"
                               class="btn btn-primary btn-sm">
                                <i class="zmdi zmdi-edit"></i>
                            </a>
                            <a href="{{ path('contact_delete', {'id': contact.id} ) }}" title="delete"
                               class="btn btn-danger btn-sm">
                                <i class="zmdi zmdi-delete"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}